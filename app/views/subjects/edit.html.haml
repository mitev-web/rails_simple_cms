.subject.new
 %h2 Update Subject
 %form{:action => "../update/"+@subject.id.to_s, :id => @subject.id, :method => "post"}
  %table{:summary => "Subject form fields"}
  %tr
   %th Name
   %td= text_field(:subject, :name)
  %tr
   %th Position
   %td= text_field(:subject, :position)
  %tr
   %th ID
   %td= text_field(:subject, :id)
  %tr
   %th Visible
   %td= text_field(:subject, :visible)
   %input{:name => "commit", :type => "submit", :value => "Update Subject"}
